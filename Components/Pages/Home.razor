@page "/"

<PageTitle>Home</PageTitle>

<MudCarousel Class="mud-width-full" Style="height:250px;" ShowArrows="@arrows" ShowBullets="@bullets" EnableSwipeGesture="@enableSwipeGesture" AutoCycle="@autocycle" TData="object">
    <MudCarouselItem Transition="transition">
        <div class="d-flex" style="height:100%">
            <MudImage Src="images/banner1.png" Alt="Photo 1" Class="mx-auto my-auto" Style="height:100%; object-fit:cover;" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <div class="d-flex" style="height:100%">
            <MudImage Src="images/banner2.jpg" Alt="Photo 2" Class="mx-auto my-auto" Style="height:100%; object-fit:cover;" />
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <div class="d-flex" style="height:100%">
            <MudImage Src="images/banner3.jpeg" Alt="Photo 3" Class="mx-auto my-auto" Style="height:100%; object-fit:cover;" />
        </div>
    </MudCarouselItem>
</MudCarousel>



@code{ 
    private bool arrows = true;
    private bool bullets = true;
    private bool enableSwipeGesture = true;
    private bool autocycle = true;
    private Transition transition = Transition.Slide;
}
